<div class="center_tab">
	<%= link_to "Enter Parking lot", new_car_path %><br /><br />
	<%= link_to "Exit Parking Lot", "/exiting_parking" %>
</div>


<%= form_tag("/reg_no_with_color") do %>
 <div class="field1">
	Find registration no of all cars with color: 
	<%= text_field_tag :color %>
	<%= submit_tag "Search Color" %>
 </div>
<% end %>

<%= form_tag("/slot_no_parking_car") do %>
 <div class="field1">
	Find Slot number of car with a given registration number is parked: 
	<%= text_field_tag :registration_number %>
	<%= submit_tag "Search Registration Number" %>
 </div>
<% end %>

<%= form_tag("/slot_no_car_color") do %>
 <div class="field1">
	Find Slot numbers of all slots based on car of a particular color:
	<%= text_field_tag :color %>
	<%= submit_tag "Search Color" %>
 </div>
<% end %>

