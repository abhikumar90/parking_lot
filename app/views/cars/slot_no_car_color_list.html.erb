<h1>Listing Cars</h1>
<div class="button">
<%= link_to 'Back', "/cars" %>
</div>

<table>
  <thead>
    <tr>
      <th>Slot No</th>
      <th>Registration Number</th>
      <th>Color</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% @parking_slot.each do |park| %>
        <% cars=Car.where("id = ? and UPPER(color) = UPPER(?)", park.car_id,params[:color]) %>
           <% cars.each do |car| %>
      <tr>
        <td><%= park.id %></td>
        <td><%= car.registration_number %></td>
        <td><%= car.color %></td>
      </tr>
    <% end %>
  <%end%>
  </tbody>
</table>

<br>
